<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfilePage"
    android:background="#f3f3f3">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/headerbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backBtn4"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/backbutton" />

        <TextView
            android:id="@+id/Bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="120dp"
            android:fontFamily="@font/inter_extrabold"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp"
            android:src="@drawable/nikecheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="143dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/profilepic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:background="@drawable/profile_roundedbg"
        android:orientation="vertical"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="#000000"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height=".5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#898787"
            android:src="@drawable/linedivider"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="578dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Phone Number: "
                    android:textColor="#404040"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#404040"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Email: "
                    android:textColor="#404040"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#404040"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/homeAddress"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Purok 100\nSan Kamasaya\nLegazpi City\nAlbay"
                android:textColor="#404040"
                android:textSize="18dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="350dp"
            android:layout_height=".5dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#898787"
            android:src="@drawable/linedivider"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="578dp" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="230dp"
            android:background="@drawable/roundbutton"
            android:fontFamily="@font/inter_bold"
            android:text="Log out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>